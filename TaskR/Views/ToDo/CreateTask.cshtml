@model CreateTaskVm
<h6><a href="/ToDo/TDLDetails/@Model.ToDoListId">Zurück zu Liste</a></h6>
<br />

<div class="container">
    <form action="/ToDo/CreateTask" method="post">

        <div class="row">
            <div class="col-md-3">
                ToDoList:
            </div>
            <div class="col-md-3">
                <select class="form-control" asp-for="@Model.ToDoListId" asp-items="@Model.SelectListItems_ToDoList"></select>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                Description:
            </div>
            <div class="col-md-6">
                <textarea class="form-control" type="text" name="Descripton"></textarea>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                Deadline:
            </div>
            <div class="col-md-6">
                <input class="form-control" type="datetime-local" name="Deadline" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                Priorität:
            </div>
            <div class="col-md-6">
                <select class="form-control" asp-for="@Model.Priority" asp-items="@Model.SelectListItems_Priorities"></select>
            </div>
        </div>
        <div class="row">
            <label class="control-label col-md-3" for="Tags">
                Tags:
            </label>
            <div class="col-md-3">
                <select asp-for="SelectedTagIds"
                        asp-items="Model.MSL_Tags"
                        class="form-control">
                </select>
            </div>

            <div class="col-md-3">
                <a href="/ToDo/CreateTag/">++Tag</a>
            </div>

        </div>
        <div class="row ">
            <div class="col-md-1">
                <input type="submit" />
            </div>
        </div>
    </form>
    <br />
    <span style="color:red">
        @TempData["ErrorMessage"]
    </span>
    @* @ViewBag.ErrorMessage *@
</div>
