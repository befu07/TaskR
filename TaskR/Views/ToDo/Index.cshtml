@model ToDoIndexVm
<h1>ToDo - Listen für @Model.Name</h1>
<h3>Übersicht</h3>
<table>
    <thead>
    <th>Name</th>
    <th>Offene Tasks</th>
    <th>Details</th>
    <th> </th>
    </thead>
    <tbody>
        @foreach (var item in Model.ToDoLists)
        {
            <tr>
                <td style="width:200px">@item.Name</td>
                <td style="width:200px">@item.Tasks.Count</td>
                <td style="width:140px">
                    <a href="/ToDo/TDLDetails/@item.Id">Details</a>
                </td>
                <td style="width:140px">
                    @* <a href="/ToDo/TDLDelete/@item.Id">Delete</a> *@
                    <a href="/ToDo/TDLDelete/@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('@item.Name löschen?')">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
<p style="color:red">@TempData["ErrorMessage"]</p>
<p style="color:green">@TempData["DeleteMessage"]</p>
<a href="/ToDo/TDLCreate">Create</a>